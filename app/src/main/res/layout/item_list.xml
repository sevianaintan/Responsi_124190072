<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="10dp"
    android:background="@color/colorPrimaryDark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yyyy-mm-dd"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="32dp" />

        <TextView
            android:id="@+id/konfirmasi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Terkonfirmasi"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tv_list_item_date"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="32dp" />

        <TextView
            android:id="@+id/sembuh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sembuh"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/konfirmasi"
            app:layout_constraintTop_toBottomOf="@+id/konfirmasi" />

        <TextView
            android:id="@+id/mati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Meninggal"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/sembuh"
            app:layout_constraintTop_toBottomOf="@+id/sembuh" />

        <TextView
            android:id="@+id/tv_list_item_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text=": xxxx kasus"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/konfirmasi"
            app:layout_constraintTop_toTopOf="@+id/konfirmasi"
            android:layout_marginLeft="24dp" />

        <TextView
            android:id="@+id/tv_list_item_died"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="47dp"
            android:text=": xxxx kasus"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/mati"
            app:layout_constraintTop_toTopOf="@+id/mati" />

        <TextView
            android:id="@+id/tv_list_item_recover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginLeft="63dp"
            android:text=": xxxx kasus"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/sembuh"
            app:layout_constraintTop_toTopOf="@+id/sembuh" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>